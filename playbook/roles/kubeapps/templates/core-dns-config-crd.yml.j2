
apiVersion: v1
kind: ConfigMap
metadata:
  name: coredns
  namespace: kube-system
data:
  Corefile: |
    .:53 {
        errors
        health {
          lameduck 5s
        }
        ready
        kubernetes cluster.local in-addr.arpa ip6.arpa {
          pods insecure
          fallthrough in-addr.arpa ip6.arpa
          ttl 30
        }
        prometheus :9153
        forward . 1.1.1.1
        cache 30
        loop
        reload
        loadbalance
    }
    {% if cert_manager_is_internal -%}
    {% for host in [kubeapps_dex_hostname, kubeapps_hostname] -%}
    {{ host }} {
      hosts {
        {{ kubeapps_ingress_controller_ip }} {{ host }}
        fallthrough
      }
      whoami
    }

    {% endfor -%}

    {{ kubeapps_internal_acme_host }} {
      hosts {
        {{ kubeapps_internal_acme_external_ip }} {{ kubeapps_internal_acme_host }}
        fallthrough
      }
      whoami
    }

    {% endif %}
